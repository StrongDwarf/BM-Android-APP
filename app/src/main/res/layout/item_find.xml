     create by xiaobaicai on 2018-12-11-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="30dp">
    <LinearLayout
        android:id="@+id/find_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/find_item_img"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="20dp"
            android:text="只能用来刷三年签,那你也太小看日本"
            android:gravity="center"
            android:textSize="@dimen/find_item_text1_size"
            android:textColor="@color/find_item_text1_color"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="走进福岗和名古屋的夜晚"
            android:gravity="center"
            android:textSize="@dimen/find_item_text2_size"
            android:textColor="@color/find_item_text2_color"
            android:paddingBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/find_item_text2"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="达人说"
        android:background="@drawable/find_item_tag"
        android:layout_alignRight="@+id/find_item_container"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"/>
</RelativeLayout>
    
