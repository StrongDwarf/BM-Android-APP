<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/personal_useintr"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/personal_user_head_pic"
        android:id="@+id/user_pic"
        android:src="@mipmap/user_head_pic_test"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/user_pic_right"
        android:paddingTop="22dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:text="欢迎你，Wang"
            android:textColor="#333333"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_signature"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:text="修改信息"
            android:textColor="#898989"/>
    </LinearLayout>
</LinearLayout>